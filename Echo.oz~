%Rajoute à la liste de sample(Music) le nombre de 0 correspondants à la duration D
%Necessite : /

declare
fun{Echo D Music}
   fun{ListeDe0 D Acc}
      if D == 0 then Acc
      else {ListeDe0 D-1 0|Acc}
      end
   end
in
   sample({ListeDe0 D nil})|Music
end


%Test
{Browse {Echo {FloatToInt 0.0001*44100.0} [1 2 3]}}
      
